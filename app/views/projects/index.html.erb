<p id="notice"><%= notice %></p>

<h3>Info</h3>

<table class="table table-condensed">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
<tr>
  <td class="active"><%= project.name %></td>
  <td class="success"><%= project.description %></td>
  <td class="warning"><%= link_to 'Show', project %></td>
  <td class="danger"><%= link_to 'Edit', edit_project_path(project) %></td>
  <td class="info"><%= link_to 'delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>

      
    <% end %>
  </tbody>
</table>
<br>

